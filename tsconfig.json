{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "core/*": ["src/core/*"],
      "ui/*": ["src/ui/*"],
      "assets/*": ["assets/*"],
      "_di/*": ["src/_di/*"]
    }
  },
  "include": ["src"]
}
